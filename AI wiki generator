    <script>
        const GROQ_API_KEY = "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";
        const MISTRAL_API_KEY = "FT03yFBEWRjW1sfGOnmqdmGSdiqw2KFs";
        const MISTRAL_AGENT_ID = "ag_019bfb7cb7597665b81f3f2418b755cd";

        let currentWikiData = { topic: '', text: '' };
        let wikiHistory = JSON.parse(localStorage.getItem('nexus_history_v4') || '[]');
        const examples = ["Apollo 11 Mission", "Marine Biology", "The Pyramids of Giza", "Sustainable Energy", "Virtual Reality History"];
        let exIdx = 0, charIdx = 0, isDeleting = false, typeTimeout;

        window.onload = () => {
            renderHistoryGrid();
            typeEffect();
        };

        function typeEffect() {
            const currentText = examples[exIdx];
            const input = document.getElementById('promptInput');
            if (input.value !== '') { setTimeout(typeEffect, 2000); return; }

            if (isDeleting) { input.placeholder = currentText.substring(0, charIdx - 1); charIdx--; }
            else { input.placeholder = currentText.substring(0, charIdx + 1); charIdx++; }

            if (!isDeleting && charIdx === currentText.length) { isDeleting = true; typeTimeout = setTimeout(typeEffect, 2000); }
            else if (isDeleting && charIdx === 0) { isDeleting = false; exIdx = (exIdx + 1) % examples.length; typeTimeout = setTimeout(typeEffect, 500); }
            else { typeTimeout = setTimeout(typeEffect, isDeleting ? 40 : 80); }
        }

        function toggleSettings() {
            const panel = document.getElementById('settingsPanel');
            panel.classList.toggle('open');
        }

        async function generateWiki(forceTopic = null) {
            const topic = forceTopic || document.getElementById('promptInput').value.trim();
            if (!topic) return;

            const depth = document.getElementById('depthSelect').value;
            const model = document.getElementById('modelSelect').value;

            // UI Transitions
            const controls = document.getElementById('mainControls');
            document.getElementById('settingsPanel').classList.remove('open');
            document.getElementById('settingsToggle').style.display = 'none';
            controls.classList.add('active');
            document.getElementById('wikiContainer').classList.remove('visible');
            document.getElementById('historySection').classList.add('hidden');
            document.getElementById('centralLoader').style.display = 'flex';
            document.getElementById('mistralSummaryArea').innerHTML = '';
            
            const vBtn = document.getElementById('verifyBtn');
            vBtn.style.display = 'flex';
            vBtn.disabled = false;
            vBtn.innerHTML = `<div class="w-8 h-8 rounded-full bg-purple-100 flex items-center justify-center"><i class="fa-solid fa-wand-magic-sparkles text-sm"></i></div><span>Verify Facts with Mistral AI</span>`;

            // Get Groq model name based on selection
            let groqModel;
            switch(model) {
                case 'gpt-oss-120b':
                    groqModel = 'openai/gpt-oss-120b';
                    break;
                case 'llama-3.3-70b-versatile':
                    groqModel = 'llama-3.3-70b-versatile';
                    break;
                case 'qwen-2.5-32b':
                    groqModel = 'qwen-2.5-32b';
                    break;
                case 'mixtral-8x7b-32768':
                    groqModel = 'mixtral-8x7b-32768';
                    break;
                case 'llama-3.1-8b-instant':
                    groqModel = 'llama-3.1-8b-instant';
                    break;
                default:
                    groqModel = 'openai/gpt-oss-120b';
            }

            // Enhanced prompt for better structure and bullet points
            const enhancedPrompt = `Create a comprehensive, well-structured educational wiki page about: "${topic}".
            
            DEPTH LEVEL: ${depth} (${depth === 'concise' ? 'Focus on key facts' : depth === 'balanced' ? 'Provide balanced coverage' : 'Include comprehensive details'}).

            STRUCTURE REQUIREMENTS:
            ## Introduction
            - Clear definition and context
            - Importance and relevance
            - Key characteristics

            ## Historical Background
            - Origins and development timeline
            - Key historical milestones
            - Important figures or events

            ## Major Concepts/Components
            - Break down main elements
            - Explain key principles
            - Use bullet points for clarity

            ## Applications/Impact
            - Real-world applications
            - Global significance
            - Future implications

            ## Summary & Key Takeaways
            - Concise summary
            - 3-5 key bullet points
            - Further reading suggestions

            STYLE GUIDELINES:
            1. Use clear, academic yet accessible language
            2. Include bullet points (•) for lists and key information
            3. Bold important terms like **this** for emphasis
            4. Keep paragraphs concise (3-5 sentences max)
            5. Use subheadings (###) for subsections
            6. Ensure logical flow between sections
            7. Include practical examples where relevant
            8. Avoid markdown citations or reference brackets

            CONTENT GUIDELINES:
            - Focus on safe, age-appropriate educational content
            - Maintain factual accuracy and neutrality
            - Highlight connections to broader knowledge areas
            - Explain complex concepts in simple terms
            - Include comparative analysis where helpful`;

            try {
                const response = await fetchWithRetry("https://api.groq.com/openai/v1/chat/completions", {
                    method: "POST",
                    headers: { 
                        "Authorization": `Bearer ${GROQ_API_KEY}`, 
                        "Content-Type": "application/json" 
                    },
                    body: JSON.stringify({
                        model: groqModel,
                        messages: [{ 
                            role: "user", 
                            content: enhancedPrompt
                        }],
                        temperature: 0.7,
                        max_tokens: 4000
                    })
                });
                
                const data = await response.json();
                if (data.error) throw new Error(data.error.message);

                const fullText = data.choices?.[0]?.message?.content || "Information gathering incomplete.";
                currentWikiData = { topic, text: fullText };
                renderWiki(fullText);
                saveHistory(topic, fullText);
                
            } catch (err) {
                document.getElementById('wikiContent').innerHTML = `<p class="text-red-500 font-bold">Nexus Error: ${err.message}</p><p class="text-slate-500 mt-2">The AI is currently calibrating. Please try a different model or check back in a moment.</p>`;
                document.getElementById('wikiContainer').classList.add('visible');
            } finally {
                document.getElementById('centralLoader').style.display = 'none';
            }
        }

        async function runMistralSummary() {
            const btn = document.getElementById('verifyBtn');
            const area = document.getElementById('mistralSummaryArea');
            btn.innerHTML = `<i class="fa-solid fa-spinner fa-spin mr-2"></i> Mistral is cross-referencing facts...`;
            btn.disabled = true;

            try {
                const response = await fetchWithRetry("https://api.mistral.ai/v1/agents/completions", {
                    method: "POST",
                    headers: { "Authorization": `Bearer ${MISTRAL_API_KEY}`, "Content-Type": "application/json" },
                    body: JSON.stringify({
                        agent_id: MISTRAL_AGENT_ID,
                        messages: [{ 
                            role: "user", 
                            content: `Act as a fact-checker. Review this wiki text for accuracy and provide a clear, concise summary with 3 major takeaways. Text: ${currentWikiData.text.substring(0, 3000)}` 
                        }]
                    })
                });
                const data = await response.json();
                const result = data.choices?.[0]?.message?.content || "Cross-reference unavailable.";
                
                area.innerHTML = `
                    <div class="mistral-summary">
                        <div class="flex items-center justify-between mb-6">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-full bg-purple-600 flex items-center justify-center text-white shadow-lg shadow-purple-200">
                                    <i class="fa-solid fa-shield-check"></i>
                                </div>
                                <div>
                                    <div class="text-purple-900 font-bold leading-none">Mistral Fact-Check</div>
                                    <div class="text-[10px] text-purple-400 font-bold uppercase tracking-widest mt-1">Verified Research</div>
                                </div>
                            </div>
                            <div class="px-3 py-1 bg-green-50 text-green-600 text-[10px] font-bold rounded-full border border-green-100">STABLE DATA</div>
                        </div>
                        <div class="prose prose-purple prose-sm max-w-none text-slate-600 leading-relaxed">
                            ${formatMarkdown(result)}
                        </div>
                    </div>
                `;
                btn.style.display = 'none';
            } catch (err) {
                area.innerHTML = `<p class="text-red-400 text-sm mt-4">Verification Timeout: ${err.message}</p>`;
                btn.innerHTML = `Retry Verification`;
                btn.disabled = false;
            }
        }

        function renderWiki(md) {
            const container = document.getElementById('wikiContent');
            const toc = document.getElementById('tocItems');
            toc.innerHTML = '';
            
            let cleanMD = md.replace(/【.*?】/g, '').replace(/\[\d+\]/g, '');

            // Process markdown with enhanced formatting
            let html = cleanMD
                .replace(/^# (.*$)/gim, '<h1>$1</h1>')
                .replace(/^## (.*$)/gim, (match, title) => {
                    const id = title.toLowerCase().replace(/[^\w]/g, '-');
                    toc.innerHTML += `<a href="#${id}" class="toc-link" onclick="event.preventDefault(); document.getElementById('${id}').scrollIntoView({behavior: 'smooth'});">${title}</a>`;
                    return `<h2 id="${id}">${title}</h2>`;
                })
                .replace(/^### (.*$)/gim, '<h3>$1</h3>')
                .replace(/\*\*(.*?)\*\*/g, '<span class="nexus-smart-link" onclick="handleSmartLink(\'$1\')">$1</span>')
                .replace(/^\s*[-•*]\s+(.*$)/gim, '<li>$1</li>')
                .split('\n\n').map(p => {
                    p = p.trim();
                    if (p.startsWith('<h') || p.startsWith('<li') || p === '') {
                        return p;
                    } else {
                        // Handle inline lists
                        if (p.includes('- ') && !p.startsWith('<')) {
                            p = p.replace(/^(- .*)$/gm, '<li>$1</li>');
                            p = p.replace(/<li>- (.*?)<\/li>/g, '<li>$1</li>');
                            return p.includes('<li>') ? `<ul>${p}</ul>` : `<p>${p}</p>`;
                        }
                        return `<p>${p}</p>`;
                    }
                }).join('');

            container.innerHTML = html;
            document.getElementById('wikiContainer').classList.add('visible');
            document.getElementById('homeBtn').style.display = 'flex';
            document.getElementById('menuBtn').style.display = 'flex';
            window.scrollTo({top: 0, behavior: 'smooth'});
        }

        function handleSmartLink(term) {
            document.getElementById('promptInput').value = term;
            generateWiki(term);
        }

        function formatMarkdown(md) {
            return md
                .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                .replace(/^\s*[-•*]\s+(.*$)/gim, '<li>$1</li>')
                .replace(/\n/g, '<br>');
        }

        async function fetchWithRetry(url, options, retries = 5, backoff = 1000) {
            for (let i = 0; i < retries; i++) {
                try {
                    const res = await fetch(url, options);
                    if (!res.ok) throw new Error(`Status ${res.status}`);
                    return res;
                } catch (err) {
                    if (i === retries - 1) throw err;
                    await new Promise(r => setTimeout(r, backoff * Math.pow(2, i)));
                }
            }
        }

        function saveHistory(topic, text) {
            const historyItem = { 
                topic, 
                text, 
                date: new Date().toLocaleDateString('en-US', { 
                    month: 'short', 
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                }),
                timestamp: Date.now()
            };
            
            // Remove duplicates and keep only 8 most recent
            wikiHistory = wikiHistory.filter(h => h.topic !== topic);
            wikiHistory.unshift(historyItem);
            wikiHistory = wikiHistory.slice(0, 8);
            
            localStorage.setItem('nexus_history_v4', JSON.stringify(wikiHistory));
            renderHistoryGrid();
        }

        function renderHistoryGrid() {
            const grid = document.getElementById('historyGrid');
            grid.innerHTML = '';
            
            if (wikiHistory.length === 0) {
                grid.innerHTML = `
                    <div class="col-span-2 text-center py-8 text-slate-400">
                        <i class="fa-solid fa-clock-rotate-left text-2xl mb-2"></i>
                        <p class="text-sm">No research history yet</p>
                    </div>
                `;
                return;
            }
            
            wikiHistory.forEach(h => {
                const card = document.createElement('div');
                card.className = 'history-card flex items-center gap-4 bg-white border border-[#e8e6e1] p-4 rounded-2xl cursor-pointer hover:border-[#da7756] hover:-translate-y-1 transition-all duration-300';
                card.innerHTML = `
                    <div class="w-10 h-10 rounded-full bg-[#f4f1ea] flex items-center justify-center text-[#da7756]">
                        <i class="fa-solid fa-book-open text-xs"></i>
                    </div>
                    <div class="flex-1 overflow-hidden">
                        <div class="truncate font-semibold text-sm text-[#3e3c38]">${h.topic}</div>
                        <div class="text-[9px] text-[#8b8680] uppercase font-bold tracking-widest mt-1">${h.date}</div>
                    </div>
                    <button onclick="event.stopPropagation(); refreshResearch('${h.topic}')" class="w-8 h-8 rounded-full bg-[#f4f1ea] hover:bg-[#da7756] hover:text-white flex items-center justify-center text-[#8b8680] transition-all" title="Refresh research">
                        <i class="fa-solid fa-rotate-right text-xs"></i>
                    </button>
                `;
                card.onclick = () => {
                    document.getElementById('promptInput').value = h.topic;
                    currentWikiData = h;
                    document.getElementById('mainControls').classList.add('active');
                    document.getElementById('historySection').classList.add('hidden');
                    document.getElementById('settingsToggle').style.display = 'none';
                    renderWiki(h.text);
                };
                grid.appendChild(card);
            });
        }

        function refreshResearch(topic) {
            event.stopPropagation();
            document.getElementById('promptInput').value = topic;
            generateWiki(topic);
        }

        function toggleTOC() {
            const sidebar = document.getElementById('tocSidebar');
            const isExpanded = !sidebar.classList.contains('left-[-280px]');
            
            if (isExpanded) {
                sidebar.classList.remove('left-0');
                sidebar.classList.add('left-[-280px]');
                document.body.classList.remove('toc-expanded');
            } else {
                sidebar.classList.remove('left-[-280px]');
                sidebar.classList.add('left-0');
                document.body.classList.add('toc-expanded');
            }
        }

        function goHome() {
            document.getElementById('mainControls').classList.remove('active');
            document.getElementById('headerText').style.display = 'block';
            document.getElementById('settingsToggle').style.display = 'flex';
            document.getElementById('historySection').classList.remove('hidden');
            document.getElementById('wikiContainer').classList.remove('visible');
            document.getElementById('homeBtn').style.display = 'none';
            document.getElementById('menuBtn').style.display = 'none';
            document.getElementById('promptInput').value = '';
            document.body.classList.remove('toc-expanded');
            document.getElementById('tocSidebar').classList.remove('left-0');
            document.getElementById('tocSidebar').classList.add('left-[-280px]');
            window.scrollTo({top: 0, behavior: 'smooth'});
        }

        function copyToClipboard() {
            navigator.clipboard.writeText(currentWikiData.text).then(() => {
                alert('Content copied to clipboard!');
            });
        }
    </script>
</body>
</html>
