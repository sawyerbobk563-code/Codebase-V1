    <script>
        const { pinyin } = pinyinPro;
        const inputEl = document.getElementById('inputText');
        const outputEl = document.getElementById('outputDisplay');
        const formatEl = document.getElementById('formatSelect');
        const toast = document.getElementById('toast');
        const buffer = document.getElementById('clipboardBuffer');
        const settingsPanel = document.getElementById('settingsPanel');
        const settingsToggle = document.getElementById('settingsToggle');

        // Settings elements
        const autoConvert = document.getElementById('autoConvert');
        const showStats = document.getElementById('showStats');
        const playSound = document.getElementById('playSound');
        const saveHistory = document.getElementById('saveHistory');
        const fontSize = document.getElementById('fontSize');
        const fontSizeValue = document.getElementById('fontSizeValue');

        // Statistics elements
        const hanziCountEl = document.getElementById('hanziCount');
        const pinyinCountEl = document.getElementById('pinyinCount');
        const wordCountEl = document.getElementById('wordCount');
        const conversionsCountEl = document.getElementById('conversionsCount');

        // Default settings
        let settings = {
            pinyinColor: '#1a1a1a',
            hanziColor: '#1a1a1a',
            bgTheme: 'gray',
            autoConvert: false,
            showStats: true,
            playSound: false,
            saveHistory: true,
            fontSize: 18,
            conversionCount: 0,
            lastInput: '',
            lastFormat: 'tone'
        };

        // Initialize
        function init() {
            loadSettings();
            setupEventListeners();
            updateStats();
            
            // Apply saved colors
            applyColorSettings();
            
            // Set initial font size
            updateFontSize();
        }

        function loadSettings() {
            const saved = localStorage.getItem('pinyinConverterSettings');
            if (saved) {
                try {
                    const parsed = JSON.parse(saved);
                    settings = { ...settings, ...parsed };
                    
                    // Apply loaded settings to UI
                    autoConvert.checked = settings.autoConvert;
                    showStats.checked = settings.showStats;
                    playSound.checked = settings.playSound;
                    saveHistory.checked = settings.saveHistory;
                    fontSize.value = settings.fontSize;
                    formatEl.value = settings.lastFormat || 'tone';
                    
                    if (settings.lastInput) {
                        inputEl.value = settings.lastInput;
                    }
                    
                    updateFontSizeValue();
                } catch (e) {
                    console.error('Error loading settings:', e);
                }
            }
        }

        function saveSettings() {
            settings.lastInput = inputEl.value;
            settings.lastFormat = formatEl.value;
            localStorage.setItem('pinyinConverterSettings', JSON.stringify(settings));
        }

        function setupEventListeners() {
            // Settings toggle
            settingsToggle.addEventListener('click', () => {
                settingsPanel.classList.toggle('open');
                settingsToggle.classList.toggle('bg-gray-100');
            });

            // Color pickers
            document.querySelectorAll('.color-picker').forEach(picker => {
                picker.addEventListener('click', function() {
                    const target = this.dataset.target;
                    const color = this.dataset.color;
                    const bg = this.dataset.bg;
                    
                    // Remove active class from all pickers of same target
                    document.querySelectorAll(`.color-picker[data-target="${target}"]`).forEach(p => {
                        p.classList.remove('active');
                    });
                    
                    // Add active class to clicked picker
                    this.classList.add('active');
                    
                    // Update settings
                    if (target === 'pinyin') {
                        settings.pinyinColor = color;
                    } else if (target === 'hanzi') {
                        settings.hanziColor = color;
                    } else if (target === 'bg' && bg) {
                        settings.bgTheme = bg;
                        applyBackground();
                    }
                    
                    saveSettings();
                    applyColorSettings();
                });
            });

            // Feature toggles
            autoConvert.addEventListener('change', () => {
                settings.autoConvert = autoConvert.checked;
                saveSettings();
                
                if (settings.autoConvert) {
                    runConversion();
                }
            });

            showStats.addEventListener('change', () => {
                settings.showStats = showStats.checked;
                saveSettings();
                updateStatsDisplay();
            });

            playSound.addEventListener('change', () => {
                settings.playSound = playSound.checked;
                saveSettings();
            });

            saveHistory.addEventListener('change', () => {
                settings.saveHistory = saveHistory.checked;
                saveSettings();
            });

            // Font size slider
            fontSize.addEventListener('input', () => {
                settings.fontSize = parseInt(fontSize.value);
                saveSettings();
                updateFontSize();
                updateFontSizeValue();
            });

            // Auto-convert on input if enabled
            inputEl.addEventListener('input', () => {
                if (settings.autoConvert && inputEl.value.trim()) {
                    runConversion();
                }
                updateStats();
                saveSettings();
            });

            // Auto-convert on format change
            formatEl.addEventListener('change', () => {
                if (inputEl.value.trim()) {
                    runConversion();
                }
                saveSettings();
            });
        }

        function applyColorSettings() {
            // Update CSS variables for colors
            document.documentElement.style.setProperty('--pinyin-color', settings.pinyinColor);
            document.documentElement.style.setProperty('--hanzi-color', settings.hanziColor);
            
            // Apply to existing output if any
            const pinyinElements = outputEl.querySelectorAll('rt');
            pinyinElements.forEach(el => {
                el.style.color = settings.pinyinColor;
            });
            
            const hanziElements = outputEl.querySelectorAll('ruby');
            hanziElements.forEach(el => {
                el.style.color = settings.hanziColor;
            });
        }

        function applyBackground() {
            const gradients = {
                gray: 'linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%)',
                blue: 'linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%)',
                green: 'linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%)',
                purple: 'linear-gradient(135deg, #f3e5f5 0%, #e1bee7 100%)',
                red: 'linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%)'
            };
            
            document.body.style.background = gradients[settings.bgTheme] || gradients.gray;
        }

        function updateFontSize() {
            outputEl.style.fontSize = `${settings.fontSize}px`;
        }

        function updateFontSizeValue() {
            const size = parseInt(fontSize.value);
            if (size <= 16) fontSizeValue.textContent = 'Small';
            else if (size <= 20) fontSizeValue.textContent = 'Medium';
            else fontSizeValue.textContent = 'Large';
        }

        function updateStats() {
            const text = inputEl.value;
            
            // Count Hanzi characters (Chinese characters)
            const hanziCount = (text.match(/[\u4e00-\u9fff]/g) || []).length;
            
            // Count words (assuming spaces separate words)
            const wordCount = text.trim() ? text.trim().split(/\s+/).length : 0;
            
            // Update UI
            hanziCountEl.textContent = hanziCount;
            wordCountEl.textContent = wordCount;
            
            // Update settings
            saveSettings();
        }

        function updateStatsDisplay() {
            const statsDisplay = document.getElementById('statsDisplay');
            statsDisplay.style.display = settings.showStats ? 'block' : 'none';
        }

        // Main conversion logic
        function runConversion() {
            const text = inputEl.value.trim();
            const format = formatEl.value;
            
            if (!text) {
                outputEl.innerHTML = '<span class="bw-subtle italic">Conversion result will appear here...</span>';
                return;
            }

            let resultHtml = '';
            let copyText = '';
            let pinyinCount = 0;

            try {
                const tokens = pinyin(text, { type: 'all', toneType: format.includes('num') ? 'num' : 'symbol' });

                if (format === 'tone' || format === 'num') {
                    const res = pinyin(text, { 
                        toneType: format === 'tone' ? 'symbol' : 'num', 
                        type: 'string' 
                    });
                    resultHtml = res;
                    copyText = res;
                    pinyinCount = res.split(/\s+/).length;
                } 
                else if (format === 'inline-tone' || format === 'inline-num') {
                    const resArr = tokens.map(t => {
                        const char = t.origin || t.original || t.match; 
                        
                        if(t.isZh) {
                            pinyinCount++;
                            return `<span style="color: ${settings.hanziColor}">${char}</span><span style="color: ${settings.pinyinColor}">(${t.pinyin})</span>`;
                        }
                        return char;
                    });
                    const resStr = resArr.join('');
                    resultHtml = resStr;
                    copyText = tokens.map(t => {
                        const char = t.origin || t.original || t.match;
                        return t.isZh ? `${char}(${t.pinyin})` : char;
                    }).join('');
                }
                else if (format === 'ruby-tone' || format === 'ruby-num') {
                    const htmlArr = tokens.map(t => {
                        const char = t.origin || t.original || t.match;
                        
                        if(t.isZh) {
                            pinyinCount++;
                            return `<ruby style="color: ${settings.hanziColor}">${char}<rt style="color: ${settings.pinyinColor}">${t.pinyin}</rt></ruby>`;
                        }
                        return `<span class="mx-1">${char}</span>`;
                    });
                    
                    resultHtml = htmlArr.join('');
                    
                    copyText = tokens.map(t => {
                         const char = t.origin || t.original || t.match;
                         return t.isZh ? `${char}(${t.pinyin})` : char;
                    }).join('');
                }

                // Play sound if enabled
                if (settings.playSound && pinyinCount > 0) {
                    // Note: Actual TTS would require a proper API
                    // This is a placeholder for the feature
                    console.log('Pronunciation feature would play here');
                }

                outputEl.innerHTML = resultHtml;
                buffer.value = copyText;

                // Update conversion count
                settings.conversionCount++;
                conversionsCountEl.textContent = settings.conversionCount;
                pinyinCountEl.textContent = pinyinCount;
                
                // Save settings
                saveSettings();

                // Add fade-in animation
                outputEl.classList.add('fade-in');
                setTimeout(() => outputEl.classList.remove('fade-in'), 300);

            } catch (e) {
                console.error(e);
                outputEl.innerHTML = '<span class="text-red-600 font-medium">Error processing text. Please check your input.</span>';
            }
        }

        // Reset inputs and outputs
        function resetFields() {
            inputEl.value = '';
            outputEl.innerHTML = '<span class="bw-subtle italic">Conversion result will appear here...</span>';
            buffer.value = '';
            inputEl.focus();
            updateStats();
            saveSettings();
        }

        // Reset all settings to defaults
        function resetSettings() {
            if (confirm('Reset all settings to defaults?')) {
                localStorage.removeItem('pinyinConverterSettings');
                settings = {
                    pinyinColor: '#1a1a1a',
                    hanziColor: '#1a1a1a',
                    bgTheme: 'gray',
                    autoConvert: false,
                    showStats: true,
                    playSound: false,
                    saveHistory: true,
                    fontSize: 18,
                    conversionCount: 0,
                    lastInput: '',
                    lastFormat: 'tone'
                };
                
                // Reset UI
                autoConvert.checked = false;
                showStats.checked = true;
                playSound.checked = false;
                saveHistory.checked = true;
                fontSize.value = 18;
                formatEl.value = 'tone';
                
                // Reset colors
                document.querySelectorAll('.color-picker[data-target="pinyin"]').forEach(p => {
                    p.classList.remove('active');
                    if (p.dataset.color === '#1a1a1a') p.classList.add('active');
                });
                
                document.querySelectorAll('.color-picker[data-target="hanzi"]').forEach(p => {
                    p.classList.remove('active');
                    if (p.dataset.color === '#1a1a1a') p.classList.add('active');
                });
                
                document.querySelectorAll('.color-picker[data-target="bg"]').forEach(p => {
                    p.classList.remove('active');
                    if (p.dataset.bg === 'gray') p.classList.add('active');
                });
                
                applyColorSettings();
                applyBackground();
                updateFontSize();
                updateFontSizeValue();
                updateStatsDisplay();
                resetFields();
            }
        }

        // Copy functionality
        function copyOutput() {
            const textToCopy = buffer.value || outputEl.innerText;
            
            if (!inputEl.value.trim()) return;

            navigator.clipboard.writeText(textToCopy).then(() => {
                showToast();
            }).catch(err => {
                buffer.select();
                document.execCommand('copy');
                showToast();
            });
        }

        function showToast() {
            toast.style.opacity = '1';
            setTimeout(() => {
                toast.style.opacity = '0';
            }, 2000);
        }
        
        // Allow ctrl+enter to run
        inputEl.addEventListener('keydown', (e) => {
            if (e.ctrlKey && e.key === 'Enter') {
                runConversion();
            }
        });

        // Initialize the application
        document.addEventListener('DOMContentLoaded', init);

    </script>
</body>
</html>
